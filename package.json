{
  "name": "sky-toolkit-ui",
  "version": "2.0.0",
  "description": "The UI layer of Sky's CSS Toolkit",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build && mkdir -p ./build",
    "test": "node ./node_modules/mocha/bin/mocha ./test/functional/sass-true.js",
    "test-circle": "npm run lint && npm run test && npm run build",
    "lint": "stylelint '**/*.scss' --syntax scss",
    "build:scss": "node-sass --include-path node_modules/ --precision 9 test/build/_all.scss > build/toolkit.css",
    "build": "npm run clean && npm run build:scss -- --output-style expanded"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sky-uk/toolkit-ui.git"
  },
  "author": "Sky UK",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/sky-uk/toolkit-ui/issues"
  },
  "homepage": "https://github.com/sky-uk/toolkit-ui#readme",
  "dependencies": {
    "sky-toolkit-core": "git+ssh@github.com:sky-uk/toolkit-core.git#release/v2"
  },
  "devDependencies": {
    "eyeglass": "^1.2.1",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "pre-commit": "^1.2.2",
    "sass-true": "2.0.3",
    "stylelint": "^7.9.0",
    "stylelint-config-sky-uk": "3.0.0",
    "stylelint-scss": "^1.4.3",
    "stylelint-selector-bem-pattern": "^1.0.0"
  }
}
