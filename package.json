{
  "private": true,
  "scripts": {
    "circle": "npm run lint && npm run test && npm run build",
    "clean": "rm build/toolkit.css build/toolkit-core.css",
    "test": "echo 'No tests to run'",
    "lint": "stylelint '**/*.scss' --syntax scss",
    "build:toolkit": "node-sass --include-path node_modules/ --include-path packages/sky-toolkit-core/node_modules/ --include-path packages/sky-toolkit-ui/node_modules/ --precision 9 build.scss > build/toolkit.css",
    "build:toolkit-core": "node-sass --include-path node_modules/ --include-path packages/sky-toolkit-core/node_modules/ --precision 9 packages/sky-toolkit-core/_all.scss > build/toolkit-core.css",
    "dist:toolkit": "npm run build:toolkit -- --output-style compressed",
    "dist:toolkit-core": "npm run build:toolkit-core -- --output-style compressed",
    "dist": "npm run dist:toolkit-core && npm run dist:toolkit"
  },
  "devDependencies": {
    "eyeglass": "^1.2.1",
    "lerna": "^2.0.0-rc.5",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "pre-commit": "^1.2.2",
    "sass-true": "2.0.3",
    "stylelint": "^7.9.0",
    "stylelint-config-sky-uk": "3.0.0",
    "stylelint-scss": "^1.4.3",
    "stylelint-selector-bem-pattern": "^1.0.0"
  }
}
