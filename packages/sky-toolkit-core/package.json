{
  "name": "sky-toolkit-core",
  "version": "2.0.0-alpha.0",
  "description": "The core of Sky's CSS Toolkit",
  "main": "index.js",
  "author": "Sky UK",
  "repository": "sky-uk/toolkit",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/sky-uk/toolkit/issues"
  },
  "homepage": "http://sky.com/toolkit",
  "scripts": {
    "clean": "rm -rf build && mkdir -p ./build",
    "test": "node ./node_modules/mocha/bin/mocha ./test/functional/sass-true.js",
    "build:scss": "node-sass --include-path node_modules/ --precision 9 _all.scss > build/toolkit-core.css",
    "build": "npm run clean && npm run build:scss -- --output-style expanded",
    "dist": "npm run clean && npm run build:scss -- --output-style compressed && npm run dist:gzip",
    "dist:gzip": "gzip -9 build/toolkit-core.css && mv build/toolkit-core.css.gz build/toolkit-core.css"
  },
  "dependencies": {
    "normalize.css": "7.0.0",
    "sass-mq": "^3.3.2",
    "supercell": "^1.2.0"
  },
  "devDependencies": {
    "eyeglass": "^1.2.1",
    "mocha": "^3.2.0",
    "sass-true": "2.0.3"
  }
}
